            <Material part="glass_windshield" material="/Game/Materials/Vehicles/Windshield_Glass" />
            <Material part="glass_windows" material="/Game/Materials/Vehicles/Tinted_Glass" />
            <Material part="tires" material="/Game/Materials/Vehicles/SUV_Tire" />
            <Material part="wheels" material="/Game/Materials/Vehicles/SUV_Wheels" />
            <Material part="bumpers" material="/Game/Materials/Vehicles/Plastic_Bumper" />
