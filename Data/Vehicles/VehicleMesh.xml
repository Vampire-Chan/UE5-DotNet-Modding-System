        </Materials>
        
        <DeformationZones>
            <Zone bone="hood" stiffness="0.4" max_displacement="50.0" />
            <Zone bone="door_left" stiffness="0.35" max_displacement="60.0" />
            <Zone bone="door_right" stiffness="0.35" max_displacement="60.0" />
            <Zone bone="tailgate" stiffness="0.4" max_displacement="45.0" />
            <Zone bone="bumper_front" stiffness="0.2" max_displacement="70.0" />
            <Zone bone="bumper_rear" stiffness="0.25" max_displacement="65.0" />
            <Zone bone="roof" stiffness="0.85" max_displacement="25.0" />
            <Zone bone="side_panel_left" stiffness="0.6" max_displacement="40.0" />
            <Zone bone="side_panel_right" stiffness="0.6" max_displacement="40.0" />
        </DeformationZones>
        
        <GlassComponents>
            <Glass bone="windshield" shatter_threshold="200.0" crack_threshold="100.0" />
            <Glass bone="window_front_left" shatter_threshold="75.0" crack_threshold="35.0" />
            <Glass bone="window_front_right" shatter_threshold="75.0" crack_threshold="35.0" />
            <Glass bone="window_rear_left" shatter_threshold="75.0" crack_threshold="35.0" />
            <Glass bone="window_rear_right" shatter_threshold="75.0" crack_threshold="35.0" />
            <Glass bone="rear_windshield" shatter_threshold="150.0" crack_threshold="75.0" />
