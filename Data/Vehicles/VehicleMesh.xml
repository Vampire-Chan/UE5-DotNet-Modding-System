    <!-- ========== MOTORCYCLE MESHES ========== -->
    
    <VehicleMesh name="akuma">
        <MainMesh path="/Game/Vehicles/Bikes/Akuma/Akuma_Base" />
        <SkeletonPath>/Game/Vehicles/Bikes/Akuma/SK_Akuma</SkeletonPath>
        
        <Materials>
            <Material part="frame" material="/Game/Materials/Vehicles/Bike_Frame" />
            <Material part="engine" material="/Game/Materials/Vehicles/Bike_Engine" />
            <Material part="fuel_tank" material="/Game/Materials/Vehicles/Bike_Tank" />
            <Material part="seat" material="/Game/Materials/Vehicles/Bike_Leather" />
            <Material part="wheels" material="/Game/Materials/Vehicles/Bike_Wheels" />
            <Material part="tires" material="/Game/Materials/Vehicles/Sport_Bike_Tire" />
            <Material part="windscreen" material="/Game/Materials/Vehicles/Bike_Windscreen" />
            <Material part="exhaust" material="/Game/Materials/Vehicles/Chrome_Exhaust" />
        </Materials>
        
        <!-- Motorcycles have extreme vulnerability -->
        <DeformationZones>
            <Zone bone="frame_main" stiffness="0.6" max_displacement="30.0" />
            <Zone bone="fuel_tank" stiffness="0.1" max_displacement="40.0" />
            <Zone bone="front_fender" stiffness="0.05" max_displacement="60.0" />
            <Zone bone="rear_fender" stiffness="0.05" max_displacement="50.0" />
            <Zone bone="windscreen" stiffness="0.02" max_displacement="80.0" />
            <Zone bone="exhaust" stiffness="0.3" max_displacement="45.0" />
        </DeformationZones>
        
        <GlassComponents>
            <Glass bone="windscreen" shatter_threshold="25.0" crack_threshold="10.0" />
            <Glass bone="speedometer" shatter_threshold="15.0" crack_threshold="5.0" />
        </GlassComponents>
    </VehicleMesh>

    <!-- ========== HELICOPTER MESHES ========== -->
    
    <VehicleMesh name="buzzard">
        <MainMesh path="/Game/Vehicles/Helicopters/Buzzard/Buzzard_Base" />
        <SkeletonPath>/Game/Vehicles/Helicopters/Buzzard/SK_Buzzard</SkeletonPath>
        
        <Materials>
            <Material part="fuselage" material="/Game/Materials/Vehicles/Military_Armor" />
            <Material part="cockpit_glass" material="/Game/Materials/Vehicles/Aircraft_Glass" />
            <Material part="rotor_main" material="/Game/Materials/Vehicles/Carbon_Fiber" />
            <Material part="rotor_tail" material="/Game/Materials/Vehicles/Carbon_Fiber" />
            <Material part="landing_gear" material="/Game/Materials/Vehicles/Steel_Landing_Gear" />
            <Material part="engine" material="/Game/Materials/Vehicles/Turbine_Engine" />
            <Material part="weapon_mounts" material="/Game/Materials/Vehicles/Weapon_Mount" />
        </Materials>
        
        <!-- Military aircraft - very resistant but critical points -->
        <DeformationZones>
            <Zone bone="fuselage_main" stiffness="0.9" max_displacement="15.0" />
            <Zone bone="tail_boom" stiffness="0.85" max_displacement="20.0" />
            <Zone bone="rotor_main_hub" stiffness="0.95" max_displacement="5.0" />
            <Zone bone="rotor_tail_hub" stiffness="0.9" max_displacement="8.0" />
            <Zone bone="landing_gear_left" stiffness="0.4" max_displacement="35.0" />
            <Zone bone="landing_gear_right" stiffness="0.4" max_displacement="35.0" />
            <Zone bone="cockpit" stiffness="0.8" max_displacement="12.0" />
        </DeformationZones>
        
        <GlassComponents>
            <Glass bone="cockpit_windscreen" shatter_threshold="300.0" crack_threshold="150.0" />
            <Glass bone="cockpit_side_left" shatter_threshold="200.0" crack_threshold="100.0" />
            <Glass bone="cockpit_side_right" shatter_threshold="200.0" crack_threshold="100.0" />
        </GlassComponents>
        
        <!-- Critical Components for Flight -->
        <CriticalComponents>
            <Component bone="rotor_main_hub" failure_threshold="100.0" affects="flight_capability" />
            <Component bone="rotor_tail_hub" failure_threshold="80.0" affects="yaw_control" />
            <Component bone="engine" failure_threshold="200.0" affects="power" />
            <Component bone="tail_boom" failure_threshold="300.0" affects="stability" />
        </CriticalComponents>
    </VehicleMesh>

