<?xml version="1.0" encoding="UTF-8"?>
<VehicleMeshes>
    
    <!-- ========== CAR MESHES ========== -->
    
    <VehicleMesh name="adder">
        <MainMesh path="/Game/Vehicles/Sports/Adder/Adder_Base" />
        <SkeletonPath>/Game/Vehicles/Sports/Adder/SK_Adder</SkeletonPath>
        
        <!-- Auto-detected parts through bone hierarchy -->
        <!-- Engine will automatically find: door_left, door_right, hood, trunk, etc. -->
        
        <!-- Material Assignments -->
        <Materials>
            <Material part="body" material="/Game/Materials/Vehicles/Sports_Car_Paint" />
            <Material part="trim" material="/Game/Materials/Vehicles/Chrome_Trim" />
            <Material part="glass_windshield" material="/Game/Materials/Vehicles/Windshield_Glass" />
            <Material part="glass_windows" material="/Game/Materials/Vehicles/Window_Glass" />
            <Material part="tires" material="/Game/Materials/Vehicles/Sports_Tire" />
            <Material part="wheels" material="/Game/Materials/Vehicles/Alloy_Wheels" />
            <Material part="lights_front" material="/Game/Materials/Vehicles/Headlight_Glass" />
            <Material part="lights_rear" material="/Game/Materials/Vehicles/Taillight_Plastic" />
            <Material part="interior" material="/Game/Materials/Vehicles/Sports_Interior" />
            <Material part="engine" material="/Game/Materials/Vehicles/Engine_Block" />
        </Materials>
        
        <!-- Deformation Zones (auto-mapped to bones) -->
        <DeformationZones>
            <Zone bone="hood" stiffness="0.3" max_displacement="60.0" />
            <Zone bone="door_left" stiffness="0.25" max_displacement="70.0" />
            <Zone bone="door_right" stiffness="0.25" max_displacement="70.0" />
            <Zone bone="trunk" stiffness="0.3" max_displacement="50.0" />
            <Zone bone="bumper_front" stiffness="0.1" max_displacement="80.0" />
            <Zone bone="bumper_rear" stiffness="0.15" max_displacement="75.0" />
            <Zone bone="roof" stiffness="0.8" max_displacement="20.0" />
            <Zone bone="pillar_a_left" stiffness="0.9" max_displacement="15.0" />
            <Zone bone="pillar_a_right" stiffness="0.9" max_displacement="15.0" />
        </DeformationZones>
        
        <!-- Glass Components (auto-shatter system) -->
        <GlassComponents>
            <Glass bone="windshield" shatter_threshold="150.0" crack_threshold="75.0" />
            <Glass bone="window_front_left" shatter_threshold="50.0" crack_threshold="25.0" />
            <Glass bone="window_front_right" shatter_threshold="50.0" crack_threshold="25.0" />
            <Glass bone="window_rear_left" shatter_threshold="50.0" crack_threshold="25.0" />
            <Glass bone="window_rear_right" shatter_threshold="50.0" crack_threshold="25.0" />
            <Glass bone="rear_windshield" shatter_threshold="100.0" crack_threshold="50.0" />
        </GlassComponents>
    </VehicleMesh>

